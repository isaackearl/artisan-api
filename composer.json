{
    "name": "isaackearl/artisan-api",
    "type": "library",
    "description": "An api service for Laravel or Lumen.  Helps you send responses with the proper status and code.  Uses Fractal for items and collections.",
    "keywords": [
        "IsaacKenEarl",
        "LaravelApi"
    ],
    "homepage": "https://github.com/isaackearl/laravel-api",
    "license": "MIT",
    "authors": [
        {
            "name": "Isaac Earl",
            "email": "isaackearl@gmail.com",
            "homepage": "https://isaacearl.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~5.6|~7.0",
        "illuminate/http": "^5.4",
        "illuminate/support": "~5.1",
        "spatie/laravel-fractal": "^4.3"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0||~6.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "IsaacKenEarl\\LaravelApi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IsaacKenEarl\\LaravelApi\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
